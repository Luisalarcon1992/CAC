Algoritmo superficio_circunferencia
	Definir radio, superficie, perimetro Como Real;
	Escribir "Ingrese el valor del radio";
	Leer radio;
	perimetro <- (2*pi*radio);
	superficie <- (pi*(radio^2));
	Escribir "El valor de la superficie es: ",superficie;
	Escribir "El valor del perímetro es: ",perimetro;
	
	
FinAlgoritmo
